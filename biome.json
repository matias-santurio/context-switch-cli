{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"maxSize": 1048576
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"all": true,
				"useExhaustiveDependencies": "off",
				"noUndeclaredVariables": "off",
				"noNodejsModules": "off",
				"useImportExtensions": "off"
			},
			"style": {
				"all": true,
				"noNonNullAssertion": "off",
				"useFilenamingConvention": "off"
			},
			"complexity": {
				"all": true,
				"noExcessiveCognitiveComplexity": "off",
				"useSimplifiedLogicExpression": "off"
			},
			"performance": {
				"all": true
			},
			"security": {
				"all": true
			},
			"suspicious": {
				"all": true
			},
			"nursery": {
				"all": true,
				"useComponentExportOnlyModules": "off",
                "useExplicitType": "off",
				"useImportRestrictions": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	}
}
